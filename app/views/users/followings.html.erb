<div class="row">
  <%= render 'asidebar' %>
  <div class="col-md-8">
    <h3 class="text-center">フォロー一覧</h3>
    <div class="container-fluid">
       <div class="row">
          <% @users.each.with_index(1) do |user , i| %>
            <% offset = i % 3 != 1 ? "col-xs-offset-1" : nil %>
            <div class="col-xs-3 <%= offset %>">
              <p class="text-center">
                <%= gravatar_for @user, user %><br>
                <%= link_to user.name, user %>
              </p>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>